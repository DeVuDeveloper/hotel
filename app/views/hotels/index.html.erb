<%= turbo_stream_from "reviews" %>
<div class="scroll-hotel relative w-full items-center justify-center overflow-x-hidden py-8 md:py-2 text-center">
  <h1 class="font-heading relative mt-4 text-2xl font-bold leading-tight text-cyan-600 md:text-4xl xl:mb-8"><%= @hotel.name %></h1>
  <p class="text-lg font-semibold">Average Rating:</p>
  <% @average_rating.floor.times do %>
    <i class="fas fa-star text-yellow-400"></i>
  <% end %>
  <% if @average_rating % 1 != 0 %>
    <i class="fas fa-star-half-alt text-yellow-400"></i>
  <% end %>
  <div class="container mx-auto flex max-w-6xl flex-col items-center justify-between rounded-lg px-4 md:-mt-32 lg:flex-row xl:px-0">
    <%= render  @hotels, reviews: @reviews %>
    <div class="review-container flex flex-col justify-between mx-4 mt-2 w-96">
      <%= turbo_frame_tag Review.new %>
      <span>
        <%= turbo_frame_tag "reviews" do %>
          <%= render  @reviews %>
        <% end %>
      </span>
      <span>
        <%= link_to new_hotel_review_path(@hotel), class: "bg-blue-500 text-white px-4 py-2 rounded-full hover:bg-blue-600 hover:text-white", data: { turbo_frame: dom_id(Review.new) } do %>
          <i class="fas fa-plus-circle mr-2"></i> Create a Review
        <% end %>
      </span>
    </div>
  </div>
</div>
