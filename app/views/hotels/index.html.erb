<div class="container mx-auto">
  <h1 class="text-3xl font-bold mb-4">Hotels</h1>

  <div class="grid grid-cols-1 gap-4 md:grid-cols-2 lg:grid-cols-3">
    <% @hotels.each do |hotel| %>
      <div class="border rounded-md p-4">
        <h2 class="text-xl font-semibold mb-2"><%= hotel.name %></h2>
        <p class="text-gray-600 mb-2"><%= hotel.address %></p>
        <p class="text-gray-600"><%= hotel.description %></p>
        <%= link_to "View Details", hotel_path(hotel), class: "mt-4 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
      </div>
    <% end %>
  </div>
</div>