<div class="container mx-auto">
  <h1 class="text-3xl font-bold mb-4">Edit User</h1>

  <%= simple_form_for(@user, url: admin_user_path(@user), method: :patch) do |form| %>
    <%= form.input :email, label: "Email", class: "border rounded py-2 px-3 w-full" %>

    <%= form.input :role, as: :select, collection: User.roles.keys.reject { |role| role == 'super_admin' },
      label: "Role", class: "border rounded py-2 px-3 w-full" %>

    <%= form.submit "Update User", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mt-4" %>
  <% end %>
</div>

