<%= turbo_stream_from "hotels" %>

<div class="bg-gray-800 pt-3">
  <div class="rounded-tl-3xl bg-gradient-to-r from-gray-900 to-gray-800 p-4 shadow text-white">
    <div class="flex items-center justify-between">
      <h2 class="font-bold pl-2 text-2xl"><%= @page_title %></h2>
      <div class="mt-4 flex justify-center">
        <%= link_to 'New Hotel', new_admin_dashboard_hotel_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded", data: { turbo_frame: dom_id(Hotel.new) } %>
      </div>
    </div>
  </div>
</div>

<div class="container mx-auto mt-1">
  <div class="w-full">
    <ul class="w-full user-list">
      <li class="bg-gray-900 text-gray-500 p-3 flex font-bold flex-col md:flex-row gap-4 sm:justify-between border-b border-gray-700 text-gray-300">
        <span class="py-2 px-4 w-1/4">Name</span>
        <span class="py-2 px-4 w-1/4">Address</span>
        <span class="py-2 px-4 w-1/4">Contact</span>
        <span class="py-2 px-4 w-1/4">Actions</span>
      </li>
      <%= turbo_frame_tag 'hotels' do %>
        <%= render @hotels %>
      <% end %>
    </ul>
  </div>
</div>

<%= turbo_frame_tag Hotel.new %>
