<%= turbo_frame_tag newsletter do %>
  <li class="bg-gray-800 border-b border-gray-200 text-gray-400 flex items-center py-3 px-4 pl-8">
    <span class="w-1/4"><%= newsletter.id %></span>
    <span class="w-1/4"><%= newsletter.created_at.strftime("%d.%m.%Y %H:%M:%S") %></span>
    <span class="w-1/4"><%= newsletter.subject %></span>
    <span class="w-1/4 flex items-center justify-start space-x-4 pl-8">

      <%= link_to admin_dashboard_newsletter_path(newsletter), class: "text-green-500 hover:underline", data: { turbo_frame: "_top" } do %>
        <i class="material-icons-outlined text-base">preview</i>
      <% end %>
      
      <%= button_to admin_dashboard_newsletter_path(id: newsletter.id), method: :delete, class: "text-red-500 hover:underline" do %>
        <i class="material-icons-outlined text-base">delete</i>
      <% end %>
    </span>
  </li>
<% end %>

