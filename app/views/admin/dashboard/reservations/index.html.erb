<%= turbo_stream_from "reservations" %>

<div class="bg-gray-800 pt-3">
  <div class="rounded-tl-3xl bg-gradient-to-r from-gray-900 to-gray-800 p-4 shadow text-white">
    <div class="flex items-center justify-between">
      <h2 class="font-bold pl-2 text-2xl"><%= @page_title %></h2>
    </div>
  </div>
</div>

<div class="container mx-auto mt-1">
  <div class="flex justify-center">
    <div class="w-full">
      <div class="table-container">
        <ul class="w-full user-list">
          <li class="bg-gray-900 p-3 flex font-bold flex-col md:flex-row gap-4 sm:justify-between border-b border-gray-700 text-gray-300">
            <span class="w-full sm:w-1/8">Start Date</span>
            <span class="w-full sm:w-1/8">End Date</span>
            <span class="w-full sm:w-1/8">Guests</span>
            <span class="w-full sm:w-1/8">Total Price</span>
            <span class="w-full sm:w-1/8">User Email</span>
            <span class="w-full sm:w-1/8">Status</span>
            <span class="w-full sm:w-1/8">Actions</span>
          </li>
          <%= turbo_frame_tag 'reservations' do %>
            <%= render @reservations %>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>


