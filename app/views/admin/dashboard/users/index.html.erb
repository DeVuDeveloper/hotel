<div class="flex flex-col sm:flex-row justify-center sm:justify-around w-full mt-8">
  <div class="w-full sm:w-auto">
    <div class="overflow-auto lg:overflow-visible">
      <ul class="w-full user-list"> <!-- Add the class "user-list" here -->
        <li class="bg-gray-900 text-gray-500 font-bold p-3 flex flex-col sm:flex-row gap-48 sm:justify-between">
          <div class="w-full sm:w-1/3">
            Email
          </div>
          <div class="w-full sm:w-1/3 text-center">
            Role
          </div>
          <div class="w-full sm:w-1/3 flex justify-end">
            Actions
          </div>
        </li>
        <%= turbo_frame_tag 'users' do %>
          <%= turbo_stream_from "users" %>
          <%= render @users %>
        <% end %>
      </ul>
    </div>
  </div>

  <div class="w-full sm:w-auto">
    <% if current_user.is_superadmin? %>
      <div class="mt-4 flex justify-center sm:justify-end">
        <%= link_to 'New Admin', new_admin_dashboard_user_path(role: :admin), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mr-4", data: { turbo_frame: dom_id(User.new) } %>
        <%= link_to 'New Manager', new_admin_dashboard_user_path(role: :manager), class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded",  data: { turbo_frame: dom_id(User.new) }%>
      </div>
    <% end %>
    <%= turbo_frame_tag User.new %>
  </div>
</div>




