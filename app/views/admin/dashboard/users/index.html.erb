<%= turbo_stream_from "users" %>

  <div class="bg-gray-800 pt-3">
  <div class="rounded-tl-3xl bg-gradient-to-r from-gray-900 to-gray-800 p-4 shadow text-white">
    <div class="flex items-center justify-between">
      <h2 class="font-bold pl-2 text-2xl"><%= @page_title %></h2>
      <% if current_user.is_superadmin? %>
        <div class="mt-4 flex"> 
          <%= link_to 'New Admin', new_admin_dashboard_user_path(role: :admin), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mr-2", data: { turbo_frame: dom_id(User.new) } %>
          <%= link_to 'New Manager', new_admin_dashboard_user_path(role: :manager), class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded", data: { turbo_frame: dom_id(User.new) } %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="flex flex-col sm:flex-row justify-center sm:justify-around w-full mt-8 flex-container">
  <div class="w-full sm:w-1/2 flex-item md:mx-8">
    <ul class="w-full user-list"> 
      <li class="bg-gray-800 text-gray-500 p-3 flex font-bold flex-col sm:flex-row gap-4 sm:justify-between border-b border-gray-700">
        <div class="w-full sm:w-1/3">
          Email
        </div>
        <div class="w-full sm:w-1/3 text-center">
          Role
        </div>
        <div class="w-full sm:w-1/3 flex justify-end">
          Actions
        </div>
      </li>
      <%= turbo_frame_tag 'users' do %>
        <%= turbo_stream_from "users" %>
        <%= render @users %>
      <% end %>
       <%= turbo_frame_tag User.new %>
    </ul>
  </div>

 



