<%= turbo_frame_tag room do %>
  <li class="bg-gray-800 border-b border-gray-200 text-gray-400 p-3 flex">
    <span class="w-full sm:w-1/3 pr-4"><%= room.name %></span>
    <span class="w-full sm:w-1/3 pr-4"><%= room.room_type %></span>
    <span class="w-full sm:w-1/3 pr-4"><%= room.number_of_beds %></span>
    <span class="w-full sm:w-1/3 pr-4"><%= room.autumn_price %></span>
    <span class="w-full sm:w-1/3 pr-4"><%= room.winter_price %></span>
    <span class="w-full sm:w-1/3 pr-4"><%= room.spring_price %></span>
    <span class="w-full sm:w-1/3 pr-4"><%= room.summer_price %></span>
    <span class="w-full sm:w-1/3 flex space-x-4">
      <%= link_to edit_admin_dashboard_hotel_room_path(room, hotel_id: room.hotel_id), class: 'text-blue-600 hover:text-blue-800' do %>
        <i class="material-icons-outlined text-base">edit</i>
      <% end %>
      <%= link_to edit_seasonal_prices_admin_dashboard_hotel_room_path(room, hotel_id: room.hotel_id), class: 'text-blue-600 hover:text-blue-800' do %>
        <i class="material-icons-outlined text-base">edit_calendar</i>
      <% end %>
      <%= button_to admin_dashboard_hotel_room_path(room, hotel_id: room.hotel_id), method: :delete, class: 'text-red-600 hover:text-red-800' do %>
        <i class="material-icons-outlined text-base">delete</i>
      <% end %>
      <%= button_to generate_calendars_admin_dashboard_hotel_room_path(room, hotel_id: room.hotel_id, room_id: room.id), method: :post, class: 'text-green-600 hover:text-green-800' do %>
        <i class="material-icons-outlined text-base">add_circle</i>
      <% end %>
    </span>
  </li>
<% end %>
