<%= turbo_frame_tag @room do %>
  <div class="block max-w-md rounded-lg bg-white p-6 shadow-[0_2px_15px_-3px_rgba(0,0,0,0.07),0_10px_20px_-2px_rgba(0,0,0,0.04)] dark:bg-neutral-700">
    <%= simple_form_for([:admin, :dashboard, @hotel, @room], url: update_seasonal_prices_admin_dashboard_hotel_room_path(@hotel, @room), method: :patch) do |f| %>
      <% if @room.errors.any? %>
        <div class="bg-red-100 text-red-500 px-4 py-2 mb-4 rounded">
          <%= @room.errors.full_messages.to_sentence.capitalize %>
        </div>
      <% end %>
      <div class="relative mb-6">
        <%= f.input :autumn_price , label: false, class: "peer block min-h-[auto] w-full rounded border-0 bg-transparent px-3 py-[0.32rem] leading-[1.6] outline-none  motion-reduce:transition-none dark:text-neutral-200", placeholder:"Autumn price" %>
      </div>
      <div class="relative mb-6">
        <%= f.input :winter_price, label: false, class: "peer block min-h-[auto] w-full rounded border-0 bg-transparent px-3 py-[0.32rem] leading-[1.6] outline-none  motion-reduce:transition-none dark:text-neutral-200", placeholder:"Winter price" %>
      </div>
      <div class="relative mb-6">
        <%= f.input :spring_price, label: false, class: "peer block min-h-[auto] w-full rounded border-0 bg-transparent px-3 py-[0.32rem] leading-[1.6] outline-none  motion-reduce:transition-none dark:text-neutral-200", placeholder:"Spring price" %>
      </div>
      <div class="relative mb-6">
        <%= f.input :summer_price, label: false, class: "peer block min-h-[auto] w-full rounded border-0 bg-transparent px-3 py-[0.32rem] leading-[1.6] outline-none  motion-reduce:transition-none dark:text-neutral-200", placeholder:"Summer price" %>
      </div>
      <%= f.button :submit, "Submit", class: "dark:active:shadow-[0_8px_9px_-4px_rgba(59,113,202,0.2),0_4px_18px_0_rgba(59,113,202,0.1)] inline-block w-full rounded bg-blue-500 px-6 pb-2 pt-2.5 text-xs font-medium leading-normal text-white shadow-[0_4px_9px_-4px_#3b71ca] hover:bg-primary-600 hover:shadow-[0_8px_9px_-4px_rgba(59,113,202,0.3),0_4px_18px_0_rgba(59,113,202,0.2)] focus:bg-primary-600 focus:shadow-[0_8px_9px_-4px_rgba(59,113,202,0.3),0_4px_18px_0_rgba(59,113,202,0.2)] focus:outline-none focus:ring-0 active:bg-primary-700 active:shadow-[0_8px_9px_-4px_rgba(59,113,202,0.3),0_4px_18px_0_rgba(59,113,202,0.2)] dark:shadow-[0_4px_9px_-4px_rgba(59,113,202,0.5)] dark:hover:shadow-[0_8px_9px_-4px_rgba(59,113,202,0.2),0_4px_18px_0_rgba(59,113,202,0.1)] dark:focus:shadow-[0_8px_9px_-4px_rgba(59,113,202,0.2),0_4px_18px_0_rgba(59,113,202,0.1)]" %>
      <%= link_to "Cancel", admin_dashboard_hotel_rooms_path, class: "text-center dark:active:shadow-[0_8px_9px_-4px_rgba(59,113,202,0.2),0_4px_18px_0_rgba(59,113,202,0.1)] inline-block w-full rounded bg-red-500 px-6 pb-2 pt-2.5 text-xs font-medium leading-normal text-white shadow-[0_4px_9px_-4px_#3b71ca] hover:bg-primary-600 hover:shadow-[0_8px_9px_-4px_rgba(59,113,202,0.3),0_4px_18px_0_rgba(59,113,202,0.2)] focus:bg-primary-600 focus:shadow-[0_8px_9px_-4px_rgba(59,113,202,0.3),0_4px_18px_0_rgba(59,113,202,0.2)] focus:outline-none focus:ring-0 active:bg-primary-700 active:shadow-[0_8px_9px_-4px_rgba(59,113,202,0.3),0_4px_18px_0_rgba(59,113,202,0.2)]" %>
    <% end %>
  </div>
<% end %>
