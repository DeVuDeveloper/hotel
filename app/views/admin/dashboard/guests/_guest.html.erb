<%= turbo_frame_tag guest do %>
  <li class="bg-gray-800 border-b border-gray-200 text-gray-400 p-3 flex">
    <span class="w-full sm:w-1/3 pr-4"><%= guest.id %></span>
    <span class="w-full sm:w-1/3 pr-4"><%= guest.name %></span>
    <span class="w-full sm:w-1/3 pr-4"><%= guest.id_card %></span>
    <% guest.reservations.each do |reservation| %>
      <span class="w-full sm:w-1/3 pr-4"><%= reservation.start_date %></span>
      <span class="w-full sm:w-1/3 pr-4"><%= reservation.end_date %></span>
      <span class="w-full sm:w-1/3 pr-4"><%= reservation.total_price  %></span>
    <% end %>
    <span class="w-full sm:w-1/3 pr-4"><%= guest.paid %></span>
    <span class="w-full sm:w-1/3 flex space-x-4">
      <%= link_to edit_admin_dashboard_guest_path(guest), class: 'text-blue-600 hover:text-blue-800' do %>
        <i class="material-icons-outlined text-base">edit</i>
      <% end %>
    </span>
  </li>
<% end %>
