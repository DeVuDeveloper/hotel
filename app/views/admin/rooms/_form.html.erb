<section class="w-full max-w-md mx-auto p-6 bg-white shadow-md rounded-md">
  <%= simple_form_for([:admin, @hotel, @room], html: { class: 'w-full', multipart: true }) do |form| %>
    <% if @room.errors.any? %>
      <div id="error_explanation" class="mb-4">
        <h2 class="text-red-600 font-bold"><%= pluralize(@room.errors.count, "error") %> prohibited this room from being saved:</h2>

        <ul class="list-disc list-inside text-red-600">
          <% @room.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-4">
      <%= form.input :name, placeholder: 'Name', class: 'w-full p-2 border rounded focus:outline-none focus:border-blue-500', label: false %>
    </div>

    <div class="mb-4">
      <%= form.input :room_type, placeholder: 'Room Type', class: 'w-full p-2 border rounded focus:outline-none focus:border-blue-500', label: false %>
    </div>

    <div class="mb-4">
      <%= form.input :number_of_beds, placeholder: 'Number of Beds', class: 'w-full p-2 border rounded focus:outline-none focus:border-blue-500', label: false %>
    </div>

    <div class="mb-4">
      <%= form.input :price_per_night, placeholder: 'Price per Night', class: 'w-full p-2 border rounded focus:outline-none focus:border-blue-500', label: false %>
    </div>

    <div class="mb-4">
      <%= form.text_area :description, placeholder: 'Description', class: 'w-full p-2 border rounded focus:outline-none focus:border-blue-500', rows: 4, label: false %>
    </div>

    <div class="mb-4">
      <%= form.collection_select :hotel_id, Hotel.all, :id, :name, { include_blank: 'Select Hotel' }, class: 'w-full p-2 border rounded focus:outline-none focus:border-blue-500', label: false %>
    </div>

    <div class="mb-4">
      <%= form.file_field :image, class: 'mt-1 block w-full', label: 'Room Image' %>
    </div>

    <div class="flex justify-center">
      <%= form.submit 'Save', class: 'bg-blue-600 text-white px-4 py-2 rounded-md shadow-md hover:bg-blue-700' %>
    </div>
  <% end %>
    <%= link_to 'Back', admin_hotel_rooms_path, class: "bg-gray-500 mt-8 hover:bg-gray-600 text-white px-4 py-2 rounded-md shadow-md " %>
</section>






