<%= turbo_frame_tag review do %>
  <div class="mt-2 space-y-2 flex flex-col">
    <div class="bg-white shadow-md p-2 rounded-md">
      <div class="flex items-center justify-between mb-2">
        <div class="flex items-center">
          <div class="rounded-full mr-4">
            <i class="fas fa-user text-gray-500"></i>
          </div>
          <div>
            <p class="text-sm font-medium text-gray-700"><%= review.user.email %></p>
            <div class="flex items-center text-yellow-400">
              <% review.rating.times do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 inline fill-current">
                  <polygon points="12,2 15.09,8.26 22,9.27 17,14.14 18.18,21.02 12,17.77 5.82,21.02 7,14.14 2,9.27 8.91,8.26 12,2"/>
                </svg>
              <% end %>
            </div>
          </div>
        </div>
<% if review.user == current_user %>
        <div class="flex space-x-2 mt-4">
          <%= link_to edit_hotel_review_path(@hotel, review), class: "text-blue-500 hover:underline", remote: true do %>
            <i class="fas fa-edit"></i>
          <% end %>
          <%= button_to hotel_review_path(@hotel, review), method: :delete, data: { confirm: "Are you sure?" }, class: "text-red-500 hover:underline", remote: true do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        </div>
<% end %>
      </div>
      <p class="text-gray-600 whitespace-pre-wrap text-start"><%= review.comment %></p>
    </div>
  </div>
<% end %>

